<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Inline Custom CSS -->
    <style>
        /* Custom CSS cho ứng dụng quản lý bệnh án */

        /* Tree View Styles */
        .tree-item {
            cursor: pointer;
            transition: all 0.2s ease;
            border-radius: 0.375rem;
            user-select: none;
        }

        .tree-item:hover {
            background-color: #f8f9fa !important;
            transform: translateX(2px);
        }

        .tree-item.active {
            background-color: #e3f2fd;
            border-left: 3px solid #2196f3;
        }

        .tree-children {
            margin-left: 1.5rem;
            border-left: 2px solid #e9ecef;
            padding-left: 1rem;
            position: relative;
        }

        .tree-children::before {
            content: '';
            position: absolute;
            left: -2px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(to bottom, #e9ecef 0%, transparent 100%);
        }

        /* Icon Styles */
        .folder-icon {
            color: #ffc107;
            filter: drop-shadow(0 1px 2px rgba(0,0,0,0.1));
        }

        .file-icon {
            color: #6c757d;
        }

        .expand-icon {
            transition: transform 0.2s ease;
            color: #6c757d;
        }

        .expand-icon.expanded {
            transform: rotate(90deg);
            color: #495057;
        }

        /* File Size Styling */
        .file-size {
            font-size: 0.75rem;
            color: #6c757d;
            font-family: 'Courier New', monospace;
            background-color: #f8f9fa;
            padding: 0.125rem 0.375rem;
            border-radius: 0.25rem;
        }

        /* Statistics Cards */
        .stats-card {
            transition: transform 0.2s ease;
        }

        .stats-card:hover {
            transform: translateY(-2px);
        }

        /* Custom Badge Styles */
        .badge.bg-secondary {
            background-color: #6c757d !important;
            font-size: 0.7rem;
        }

        /* Loading Animation */
        .loading-spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #007bff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .tree-children {
                margin-left: 1rem;
                padding-left: 0.5rem;
            }
            
            .file-size {
                font-size: 0.65rem;
                padding: 0.1rem 0.25rem;
            }
            
            .tree-item {
                padding: 0.5rem !important;
            }
        }

        /* Dark Mode Support */
        @media (prefers-color-scheme: dark) {
            .tree-item:hover {
                background-color: #343a40 !important;
            }
            
            .tree-children::before {
                background: linear-gradient(to bottom, #495057 0%, transparent 100%);
            }
            
            .file-size {
                background-color: #495057;
                color: #adb5bd;
            }
        }

        /* Animation cho tree expansion */
        .tree-children {
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .tree-children.collapsed {
            max-height: 0;
        }

        .tree-children.expanded {
            max-height: 1000px;
        }

        /* Custom scrollbar */
        .card-body {
            max-height: 70vh;
            overflow-y: auto;
        }

        .card-body::-webkit-scrollbar {
            width: 8px;
        }

        .card-body::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .card-body::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

        .card-body::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

        /* Breadcrumb styling */
        .path-breadcrumb {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            word-break: break-all;
        }

        /* Enhanced button styles */
        .btn-refresh {
            transition: all 0.2s ease;
        }

        .btn-refresh:hover {
            transform: rotate(180deg);
        }
    </style>
</head>
<body>
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex align-items-center">
                    <i class="bi bi-search fs-2 text-primary me-3"></i>
                    <div>
                        <h1 class="mb-1"><%= title %></h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-geo-alt"></i> 
                            <code><%= baseDir %></code>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Search Form -->
        <div class="row mb-4">
            <div class="col">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-search"></i>
                            Tìm kiếm bệnh án
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" action="/" class="d-flex gap-2">
                            <div class="flex-grow-1">
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       name="folder" 
                                       value="<%= folderName %>" 
                                       placeholder="Nhập tên bệnh án cần tìm (ví dụ: 100, 101, 01...)" 
                                       required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search"></i>
                                Tìm kiếm
                            </button>
                        </form>
                        
                        <% if (folderName && searchPath) { %>
                            <div class="mt-3 p-2 bg-success bg-opacity-10 border border-success rounded">
                                <small class="text-success">
                                    <i class="bi bi-check-circle"></i>
                                    Đã tìm thấy: <code><%= searchPath %></code>
                                </small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-diagram-3"></i>
                            Cấu trúc bệnh án
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <!-- Error message -->
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Lỗi:</strong> <%= error %>
                            </div>
                        <% } else if (structure) { %>
                            <!-- Search result info -->
                            <div class="alert alert-info mb-3" role="alert">
                                <i class="bi bi-info-circle"></i>
                                Hiển thị nội dung của bệnh án: <strong><%= folderName %></strong>
                            </div>
                            <!-- Directory tree -->
                            <div id="directory-tree">
                                <%- include('partials/tree-node', { node: structure, level: 0 }) %>
                            </div>
                            
                            <!-- Statistics -->
                            <div class="mt-4 pt-3 border-top">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-folder fs-4 text-warning me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="folder-count">0</div>
                                                <small class="text-muted">Bệnh án</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-file-earmark fs-4 text-info me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="file-count">0</div>
                                                <small class="text-muted">Tệp tin</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-hdd fs-4 text-success me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="total-size">0 B</div>
                                                <small class="text-muted">Tổng dung lượng</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else if (!folderName) { %>
                            <!-- Welcome message -->
                            <div class="text-center py-5">
                                <i class="bi bi-search fs-1 text-muted"></i>
                                <h4 class="text-muted mt-3">Chào mừng đến với Quản lý bệnh án</h4>
                                <p class="text-muted">Vui lòng nhập tên bệnh án ở form trên để xem nội dung</p>
                                <div class="mt-4">
                                    <h6 class="text-muted">Các bệnh án có sẵn:</h6>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <span class="badge bg-secondary">100</span>
                                        <span class="badge bg-secondary">101</span>
                                        <span class="badge bg-secondary">01</span>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- No results -->
                            <div class="text-center py-5">
                                <i class="bi bi-folder-x fs-1 text-muted"></i>
                                <p class="text-muted mt-3">Không tìm thấy bệnh án "<%= folderName %>"</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Control buttons -->
        <div class="row mt-3">
            <div class="col">
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-outline-primary btn-refresh">
                        <i class="bi bi-arrow-clockwise"></i>
                        Làm mới
                    </button>
                    <button class="btn btn-outline-success" onclick="window.treeView?.expandAll()">
                        <i class="bi bi-plus-square"></i>
                        Mở rộng tất cả
                    </button>
                    <button class="btn btn-outline-warning" onclick="window.treeView?.collapseAll()">
                        <i class="bi bi-dash-square"></i>
                        Thu gọn tất cả
                    </button>
                </div>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-keyboard"></i>
                    Phím tắt: Ctrl+E (mở rộng), Ctrl+C (thu gọn), Ctrl+R (làm mới)
                </small>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Inline Custom JavaScript -->
    <script>
        /**
         * TreeView Module - Xử lý tương tác expand/collapse cho cây bệnh án
         */
        const TreeView = {
            // Khởi tạo TreeView
            init() {
                this.bindEvents();
                this.updateStats();
                console.log('TreeView initialized');
            },

            // Gán các sự kiện
            bindEvents() {
                // Sự kiện click cho các folder
                document.addEventListener('click', (e) => {
                    const treeItem = e.target.closest('.tree-item');
                    if (treeItem && treeItem.dataset.type === 'folder') {
                        this.toggleFolder(treeItem);
                    }
                });

                // Sự kiện cho nút refresh
                const refreshBtn = document.querySelector('.btn-refresh');
                if (refreshBtn) {
                    refreshBtn.addEventListener('click', () => {
                        this.refreshPage();
                    });
                }

                // Phím tắt
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'F5' || (e.ctrlKey && e.key === 'r')) {
                        e.preventDefault();
                        this.refreshPage();
                    }
                });
            },

            // Toggle folder expand/collapse
            toggleFolder(folderElement) {
                const children = folderElement.nextElementSibling;
                const expandIcon = folderElement.querySelector('.expand-icon');
                
                if (children && children.classList.contains('tree-children')) {
                    const isExpanded = !children.classList.contains('collapsed');
                    
                    if (isExpanded) {
                        // Collapse
                        children.classList.add('collapsed');
                        children.classList.remove('expanded');
                        expandIcon?.classList.remove('expanded');
                        folderElement.setAttribute('aria-expanded', 'false');
                    } else {
                        // Expand
                        children.classList.remove('collapsed');
                        children.classList.add('expanded');
                        expandIcon?.classList.add('expanded');
                        folderElement.setAttribute('aria-expanded', 'true');
                    }
                    
                    // Cập nhật thống kê sau khi toggle
                    setTimeout(() => this.updateStats(), 100);
                }
            },

            // Cập nhật thống kê
            updateStats() {
                const visibleItems = document.querySelectorAll('.tree-item:not(.collapsed .tree-item)');
                let folderCount = 0;
                let fileCount = 0;
                let totalSize = 0;

                visibleItems.forEach(item => {
                    if (item.dataset.type === 'folder') {
                        folderCount++;
                    } else if (item.dataset.type === 'file') {
                        fileCount++;
                        const sizeAttr = item.dataset.size;
                        if (sizeAttr) {
                            totalSize += parseInt(sizeAttr) || 0;
                        }
                    }
                });

                // Cập nhật UI
                this.updateStatsDisplay(folderCount, fileCount, totalSize);
            },

            // Cập nhật hiển thị thống kê
            updateStatsDisplay(folders, files, totalSize) {
                const folderCountEl = document.querySelector('#folder-count');
                const fileCountEl = document.querySelector('#file-count');
                const totalSizeEl = document.querySelector('#total-size');

                if (folderCountEl) folderCountEl.textContent = folders;
                if (fileCountEl) fileCountEl.textContent = files;
                if (totalSizeEl) totalSizeEl.textContent = this.formatFileSize(totalSize);
            },

            // Định dạng kích thước file
            formatFileSize(bytes) {
                if (bytes === 0) return '0 B';
                
                const k = 1024;
                const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            },

            // Làm mới trang
            refreshPage() {
                // Hiển thị loading spinner
                const refreshBtn = document.querySelector('.btn-refresh');
                if (refreshBtn) {
                    const originalContent = refreshBtn.innerHTML;
                    refreshBtn.innerHTML = '<div class="loading-spinner"></div>';
                    refreshBtn.disabled = true;
                    
                    // Reload trang sau 500ms
                    setTimeout(() => {
                        window.location.reload();
                    }, 500);
                }
            },

            // Expand tất cả folders
            expandAll() {
                const allFolders = document.querySelectorAll('.tree-item[data-type="folder"]');
                allFolders.forEach(folder => {
                    const children = folder.nextElementSibling;
                    const expandIcon = folder.querySelector('.expand-icon');
                    
                    if (children && children.classList.contains('tree-children')) {
                        children.classList.remove('collapsed');
                        children.classList.add('expanded');
                        expandIcon?.classList.add('expanded');
                        folder.setAttribute('aria-expanded', 'true');
                    }
                });
                this.updateStats();
            },

            // Collapse tất cả folders
            collapseAll() {
                const allFolders = document.querySelectorAll('.tree-item[data-type="folder"]');
                allFolders.forEach(folder => {
                    const children = folder.nextElementSibling;
                    const expandIcon = folder.querySelector('.expand-icon');
                    
                    if (children && children.classList.contains('tree-children')) {
                        children.classList.add('collapsed');
                        children.classList.remove('expanded');
                        expandIcon?.classList.remove('expanded');
                        folder.setAttribute('aria-expanded', 'false');
                    }
                });
                this.updateStats();
            }
        };

        // Khởi tạo khi DOM đã sẵn sàng
        document.addEventListener('DOMContentLoaded', () => {
            TreeView.init();
        });

        // Export cho global scope nếu cần
        window.TreeView = TreeView;
    </script>
</body>
</html>