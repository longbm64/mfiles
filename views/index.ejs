<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex align-items-center">
                    <i class="bi bi-search fs-2 text-primary me-3"></i>
                    <div>
                        <h1 class="mb-1"><%= title %></h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-geo-alt"></i> 
                            <code><%= baseDir %></code>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Search Form -->
        <div class="row mb-4">
            <div class="col">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-search"></i>
                            Tìm kiếm thư mục
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" action="/" class="d-flex gap-2">
                            <div class="flex-grow-1">
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       name="folder" 
                                       value="<%= folderName %>" 
                                       placeholder="Nhập tên thư mục cần tìm (ví dụ: 100, 101, 01...)" 
                                       required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search"></i>
                                Tìm kiếm
                            </button>
                        </form>
                        
                        <% if (folderName && searchPath) { %>
                            <div class="mt-3 p-2 bg-success bg-opacity-10 border border-success rounded">
                                <small class="text-success">
                                    <i class="bi bi-check-circle"></i>
                                    Đã tìm thấy: <code><%= searchPath %></code>
                                </small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-diagram-3"></i>
                            Cấu trúc thư mục
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <!-- Error message -->
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Lỗi:</strong> <%= error %>
                            </div>
                        <% } else if (structure) { %>
                            <!-- Search result info -->
                            <div class="alert alert-info mb-3" role="alert">
                                <i class="bi bi-info-circle"></i>
                                Hiển thị nội dung của thư mục: <strong><%= folderName %></strong>
                            </div>
                            <!-- Directory tree -->
                            <div id="directory-tree">
                                <%- include('partials/tree-node', { node: structure, level: 0 }) %>
                            </div>
                            
                            <!-- Statistics -->
                            <div class="mt-4 pt-3 border-top">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-folder fs-4 text-warning me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="folder-count">0</div>
                                                <small class="text-muted">Thư mục</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-file-earmark fs-4 text-info me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="file-count">0</div>
                                                <small class="text-muted">Tệp tin</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-hdd fs-4 text-success me-2"></i>
                                            <div>
                                                <div class="fw-bold" id="total-size">0 B</div>
                                                <small class="text-muted">Tổng dung lượng</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else if (!folderName) { %>
                            <!-- Welcome message -->
                            <div class="text-center py-5">
                                <i class="bi bi-search fs-1 text-muted"></i>
                                <h4 class="text-muted mt-3">Chào mừng đến với Quản lý thư mục</h4>
                                <p class="text-muted">Vui lòng nhập tên thư mục ở form trên để xem nội dung</p>
                                <div class="mt-4">
                                    <h6 class="text-muted">Các thư mục có sẵn:</h6>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <span class="badge bg-secondary">100</span>
                                        <span class="badge bg-secondary">101</span>
                                        <span class="badge bg-secondary">01</span>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- No results -->
                            <div class="text-center py-5">
                                <i class="bi bi-folder-x fs-1 text-muted"></i>
                                <p class="text-muted mt-3">Không tìm thấy thư mục "<%= folderName %>"</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Control buttons -->
        <div class="row mt-3">
            <div class="col">
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-outline-primary btn-refresh">
                        <i class="bi bi-arrow-clockwise"></i>
                        Làm mới
                    </button>
                    <button class="btn btn-outline-success" onclick="window.treeView?.expandAll()">
                        <i class="bi bi-plus-square"></i>
                        Mở rộng tất cả
                    </button>
                    <button class="btn btn-outline-warning" onclick="window.treeView?.collapseAll()">
                        <i class="bi bi-dash-square"></i>
                        Thu gọn tất cả
                    </button>
                </div>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-keyboard"></i>
                    Phím tắt: Ctrl+E (mở rộng), Ctrl+C (thu gọn), Ctrl+R (làm mới)
                </small>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Tree View JS -->
    <script src="/assets/js/tree-view.js"></script>
</body>
</html>